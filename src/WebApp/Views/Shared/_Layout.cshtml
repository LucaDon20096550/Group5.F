<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="stylesheet" href="~/css/main.css">
    
    
</head>
<body>
    <!-- navbar-->

   <header>
        <nav class="navbar navbar-expand-lg navbar-light py-3">
            <div class="container">
              <a class="navbar-brand p-2" asp-area="" asp-controller="Home" asp-action="Index" id="logo">ZMDH</a>
       
              <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navmenu"
              >
                <span class="navbar-toggler-icon"></span>
              </button>
       
              <div class="collapse navbar-collapse" id="navmenu">
                <ul class="navbar-nav ms-auto mx-3">
                  <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="OverOns">Over ons</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="OnsTeam">Het team</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Zelfhulpgroepen">Zelfhulpgroepen</a>
                  </li>
                  <li>
                    <div class="dropdown">
                      <button style="background-color: white!important; color: rgba(0,0,0,.55)!important;border-color: rgba(0,0,0,.55)!important;" class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Meer
                      </button>
                      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="ExtraInformatie">Extra infromatie</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Klachteninformatie">Klachten informatie</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="AlgemeneVoorwaarden">Algemene voorwaarden</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="PrivacyPolicy">Privacy policy</a>
                      </div>
                    </div>
                  </li>
                  
                 
                  @if(!User.Identity.IsAuthenticated) 
              {
                <li>
                  <div>
                    <a id="login button nav" class="btn  btn-md" href="/identity/account/login" role="button"> 
                      Inloggen
                    </a>
                  </div>
                </li>
                
              } else {
                <li><div>
                    <a id="profiel button" class="btn btn-md mx-sm-4" href="/identity/account/manage" role="button"> 
                      Profiel
                    </a>
                  </div>
                </li>
                
                <li>
                  <div>
                    <a id="logout button" class="btn btn-md" href="/identity/account/logout" role="button"> 
                      Uitloggen
                    </a>
                  </div>
                </li>
              }
                </ul>
              </div>
            </div>
          </nav>
        </header>




<main role="main" class="pb-0">
  @RenderBody()
</main>

      <!-- footer -->

      <section>
          <div class="container">
            <footer class="d-flex flex-wrap justify-content-between align-items-center border-top">
              <div class="col-md-4 d-flex align-items-center px-5">
                <span class="text-light">&copy; 2021 ZMDH</span>
              </div>

              <ul class="nav col-md-4 d-flex justify-content-end">
                <li><a  asp-controller="Home" asp-action="AlgemeneVoorwaarden" id="footer-link" class="nav-link">Algemene voorwaarden</a></li>
                <li><a asp-controller="home" asp-action="PrivacyPolicy" id="footer-link" class="nav-link">Privacy verklaring</a></li>
              </ul>
          
            </footer>
          </div>
      </section>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
